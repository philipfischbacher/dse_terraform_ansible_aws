- name: "Installing VIM"
  apt: pkg=vim state=installed

- name: "Installing Git"
  apt: pkg=git state=installed

- name: "Installing nginx"
  apt: pkg=nginx state=installed

- name: "Installing additional software"
  apt: pkg={{ item }} state=installed
  with_items:
  - dnsutils
  - ntp
  - lvm2
  - at

---
- name: Install Vim
  yum:
    name: vim
    state: installed

- name: Install Git
  yum:
    name: git
    state: installed

- name: "Installing additional software"
  yum: 
    name:{{ item }}
    state: installed
    with_items:
    - dnsutils
    - ntp
    - lvm2
    - at
